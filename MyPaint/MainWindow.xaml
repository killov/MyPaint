<Window x:Class="MyPaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPaint"
        mc:Ignorable="d"
        Title="Editor" Height="533.5" Width="508.5" Closing="closed" ResizeMode="NoResize">
    <DockPanel Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <Menu DockPanel.Dock="Top" Height="20">
            <MenuItem Header="Nový" Click="newClick" Height="20" />
            <MenuItem Header="Otevřít" Click="openClick" Height="20" />
            <MenuItem Header="Uložit" Click="saveClick" />
            <MenuItem Header="Uložit jako" Click="saveAsClick" />
            <MenuItem Header="Ukončit" Click="exitClick" />
        </Menu>
        <Grid>
            <Grid Margin="0,55,0,31">
                <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="400" Width="500" MouseDown="mouseDown" MouseMove="mouseMove" MouseUp="mouseUp" Background="White">
                        <Rectangle x:Name="res" Height="400" Width="500" Fill="#00E8E7E7" MouseUp="poz_mouseDown" />
                </Canvas>
            </Grid>
            <Canvas x:Name="paleta" Margin="0,25,2,0" Background="White" Height="20" VerticalAlignment="Top"/>
            <Label x:Name="labelPath" Content="" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="517" Height="26" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
            <Button x:Name="cara" Content="LINE" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="54" Click="cara_Click"/>
            <Button x:Name="obdelnik" Content="RECT" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="54" Margin="54,0,0,0" Click="obdelnik_Click"/>
            <Button x:Name="elipsa" Content="ELLIPSE" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="54" Margin="108,0,0,0" Click="elipsa_Click"/>
            <Slider x:Name="slider" HorizontalAlignment="Left" Margin="391,2,0,0" VerticalAlignment="Top" Width="101" ValueChanged="slider_ValueChanged" Maximum="20" Minimum="1" Value="1" SmallChange="1"/>
            <Ellipse x:Name="colors" HorizontalAlignment="Left" Height="18" Margin="358,2,0,0" VerticalAlignment="Top" Width="16" Stroke="Black" StrokeThickness="5" MouseUp="colors_MouseUp"/>
            <Button x:Name="polygon" Content="POLYGON" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="63" Margin="162,0,0,0" Click="polygon_Click"/>

        </Grid>
    </DockPanel>
</Window>
